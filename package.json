{
  "name": "extract-zhongwen",
  "version": "1.1.0",
  "description": "Utility for extracting chinese characters from a string",
  "main": "./cjs/ExtractChinese.js",
  "module": "./esm/ExtractChinese.js",
  "types": "./types/index.d.ts",
  "exports": {
    "import": "./esm/ExtractChinese.js",
    "require": "./cjs/ExtractChinese.js"
  },
  "files": [
    "cjs/",
    "esm/",
    "types/"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.cjs.json && tsc --project tsconfig.esm.json",
    "prepublishOnly": "npm run build",
    "test": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TheRobertLing/extract-zhongwen.git"
  },
  "keywords": [
    "chinese",
    "zhongwen",
    "hanzi",
    "simplified",
    "traditional",
    "convert",
    "filter",
    "extract",
    "text-processing"
  ],
  "author": "Robert L",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/TheRobertLing/extract-zhongwen/issues"
  },
  "homepage": "https://github.com/TheRobertLing/extract-zhongwen#readme",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3"
  },
  "type": "module"
}
